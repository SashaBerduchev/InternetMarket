<Window x:Class="SERVERInternetMarket.AdminLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SERVERInternetMarket"
        mc:Ignorable="d"
        Title="AdminLogin" Height="350" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Login"  Grid.Column="0" Grid.Row="0" Margin="32,26,146,96"/>
        <TextBox Name="LoginText"  Grid.Column="0" Grid.Row="0" Margin="32,45,62,78"/>
        <TextBlock Text="Paswword"  Grid.Column="0" Grid.Row="1" Margin="32,26,146,96"/>
        <PasswordBox Name="PassText"  Grid.Column="0" Grid.Row="1" Margin="32,45,62,78"/>
        <Button Name="AutentificationBtn" Grid.Column="1" Grid.Row="0" Margin="60" Content="Autentification" Click="AutentificationBtn_Click"/>
        <Button Name="LoginBtn" Grid.Column="1" Grid.Row="1" Margin="60" Content="Login" Click="LoginBtn_Click"/>
    </Grid>
</Window>
